generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id          String    @id @default(cuid())
  slug        String    @unique
  content     String    @db.Text
  viewCount   Int       @default(0)
  maxViews    Int?      
  expiresAt   DateTime? 
  createdAt   DateTime  @default(now())
}